{
  "name": "babbpe-api-v2",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:setup": "bash scripts/setup-dev.sh",
    "ca:seed": "bash scripts/clean-arch/setup-clean-arch-seed.sh",
    "ca:unseed": "bash scripts/clean-arch/remove-clean-arch-seed.sh",
    "build": "bun build ./src/index.ts --outdir ./dist",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "lint:fix": "biome check --apply .",
    "db:migrate": "bun run scripts/db/migrate.ts",
    "db:rollback": "bun run scripts/db/rollback.ts",
    "prepare": "husky install",
    "db:generate": "drizzle-kit generate:pg"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "express": "^4.21.2",
    "pg": "^8.13.3",
    "pino": "^9.6.0",
    "routing-controllers": "^0.11.1",
    "routing-controllers-openapi": "^4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/pg": "^8.11.11",
    "bun-types": "latest",
    "drizzle-kit": "^0.30.4",
    "husky": "^8.0.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.2"
  }
}
